<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EdgarAmaguana.Login">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
                <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            </Frame>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese el contraseña" IsPassword="True"/>
            <Button x:Name="btnIniciarsesion" Text="Iniciar sesión" Clicked="btnIniciarsesion_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>